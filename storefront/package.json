{
  "name": "storefront",
  "description": "Explore the Adobe Commerce Products GraphQL API",
  "version": "1.0.0",
  "type": "module",
  "author": "Adobe",
  "license": "Apache-2.0",
  "main": "index.html",
  "scripts": {
    "build": "NODE_ENV=production vite build",
    "preview": "vite preview",
    "clean": "rm -rf dist && rm -rf node_modules",
    "dev": "vite",
    "format": "pnpm run prettier . --write",
    "start:proxy": "pnpm --filter api run start:proxy",
    "start:dev": "concurrently -k -s all 'npm run start:proxy' 'npm run dev'",
    "start": "NODE_ENV=production vite build && vite preview"
  },
  "dependencies": {
    "api": "workspace:*",
    "dropins": "workspace:*",
    "components": "workspace:*",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.6",
    "@tailwindcss/typography": "^0.5.10",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.31",
    "prettier": "3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "tailwindcss": "^3.3.5",
    "vite": "^4.5.0"
  }
}
